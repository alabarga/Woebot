<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/button_margin">

    <TextView
        android:id="@+id/text_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/message_end_margin"
        android:layout_marginRight="@dimen/message_margin"
        android:background="@drawable/sent_msg"
        android:padding="@dimen/text_padding"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_message_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_sent_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/text_padding"
        android:paddingStart="@dimen/text_padding"
        android:paddingTop="@dimen/text_padding"
        android:textSize="@dimen/text_message_time_size"
        app:layout_constraintBottom_toBottomOf="@id/text_sent"
        app:layout_constraintEnd_toStartOf="@id/text_sent" />

</android.support.constraint.ConstraintLayout>
